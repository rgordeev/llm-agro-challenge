# Auto detect text files and perform LF normalization
* text=auto

# Python files
*.py text diff=python

# Jupyter Notebook files
*.ipynb text

# Documentation files
*.md text
*.rst text
*.txt text

# Binary files
*.png binary
*.jpg binary
*.gif binary
*.ico binary
*.pdf binary
*.zip binary
*.gz binary
*.tar binary
*.tgz binary
*.rar binary
*.7z binary

# Exclude files from export
.gitattributes export-ignore
.gitignore export-ignore 